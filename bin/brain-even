#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function cli\line;
use function cli\prompt;

function isEven($number)
{
    return ($number % 2 === 0);
}

//checking the answer
function rightAnswer($question, $answer) {
    if ((isEven($question) && $answer === "yes") or (!isEven($question) && $answer === "no")) {
        return true;
    } else {
        return false;
    }
}

//game Even
function gameEven()
{
    $rounds = 3; //number of rounds

    //Start of the game, greeting
    line("Welcome to the Brain Games!");
    $name = prompt("May I have your name?");
    line("Hello, %s!", $name);
    line('Answer "yes" if the number is even, otherwise answer "no".');

    //game
    $winner = true;
    $answer = "";

    //rounds
    for ($i = 1; ($i <= $rounds) && $winner; $i++) {
        $question = rand(0, 100);
        line('Question: %d', $question);
        $answer = prompt("Your answer");
        $winner = rightAnswer($question, $answer);
        if ($winner) {
            line('Correct!');
        } elseif (isEven($question)) {
            line("'no' is wrong answer ;(. Correct answer was 'yes'");
        } else {
            line("'yes' is wrong answer ;(. Correct answer was 'no'");
        }
    }
    
    //finish of the game
    $text = ($winner) ? 'Congratulations, %s' : "Let's try again, %s";
    line($text, $name);
}

gameEven();
?>
